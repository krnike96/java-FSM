<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fsm.controllers.QuestionBuilderController">
    <children>
        <VBox alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <Label text="Question Builder: [Survey Name]" fx:id="lblSurveyName" style="-fx-font-weight: bold; -fx-font-size: 18px;" />

            <TitledPane collapsible="false" text="Add New Question" maxWidth="1.7976931348623157E308">
                <content>
                    <GridPane hgap="10.0" vgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <children>
                            <Label text="Question Text:" />
                            <TextArea fx:id="txtQuestionText" prefHeight="70.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                            <Label text="Type:" GridPane.rowIndex="1" />
                            <ComboBox fx:id="cmbQuestionType" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                            <VBox fx:id="vboxDynamicOptions" alignment="TOP_CENTER" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                            <Button fx:id="btnAddQuestion" text="Add Question" GridPane.columnIndex="2" GridPane.rowIndex="0" VBox.vgrow="NEVER" />
                        </children>
                    </GridPane>
                </content>
            </TitledPane>

            <Label text="Current Questions:" style="-fx-font-weight: bold;" />
            <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true">
                <VBox fx:id="vboxQuestionsList" spacing="10">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                </VBox>
            </ScrollPane>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="btnSave" text="Save and Close" onAction="#handleSaveQuestions" defaultButton="true" />
                <Button fx:id="btnCancel" text="Cancel" cancelButton="true" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>