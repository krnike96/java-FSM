<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" style="-fx-background-color: #f7f7f7;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fsm.controllers.DetailedReportController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="900.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="40.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 8 15;" text="&lt; Back to Summary" />
                        <!-- New Export Button -->
                        <Button fx:id="btnExport" mnemonicParsing="false" onAction="#handleExportCsv" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 8 15;" text="Export to CSV">
                            <HBox.margin>
                                <Insets left="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </HBox>
                <Label fx:id="lblSurveyName" styleClass="view-title" text="Detailed Responses for: [Survey Name]">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <TableView fx:id="responseTable" prefHeight="580.0" prefWidth="860.0" style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 6; -fx-padding: 5;">
                    <!-- REMOVED: <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy> -->
                    <!-- Removal of the policy enables horizontal scrolling when column content exceeds table width -->
                </TableView>
            </children>
            <padding>
                <Insets left="20.0" right="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
