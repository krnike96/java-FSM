<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.fsm.controllers.AddSurveyController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="New Survey Details" style="-fx-font-weight: bold; -fx-font-size: 16px;" GridPane.columnSpan="2" />

    <Label text="Survey Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtSurveyName" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ComboBox fx:id="cmbStatus" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox alignment="CENTER_RIGHT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="btnSave" text="Save Survey" defaultButton="true" />
        <Button fx:id="btnCancel" text="Cancel" cancelButton="true" />
    </HBox>
</GridPane>