<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>

<VBox fx:id="surveyViewContainer"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fsm.controllers.SurveyController"
      spacing="10"
      style="-fx-padding: 20px;">

    <Label text="Survey Management" style="-fx-font-weight: bold; -fx-font-size: 18px;" />

    <HBox spacing="10">
        <Button fx:id="btnAdd" text="Add New Survey" />
        <Button fx:id="btnEdit" text="Edit Selected" />
        <Button fx:id="btnDelete" text="Delete Selected" />
    </HBox>

    <TableView fx:id="surveyTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colName" text="Survey Name" prefWidth="300" />
            <TableColumn fx:id="colStatus" text="Status" prefWidth="150" />
            <TableColumn fx:id="colQuestions" text="Questions" prefWidth="100" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
</VBox>